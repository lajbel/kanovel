language = "kaboom"
run = "node run.js"
entrypoint = "code/main.js"

hidden = [
	".config",
	"learn",
	"dist",
	"helper.ts",
	"run.js",
	"package.json",
	"package-lock.json",
	".gitignore",
]

[packager]
language="nodejs"

[packager.features]
packageSearch = true

[languages.javascript]
pattern = "**/*.{js,ts}"
syntax = "javascript"

[languages.javascript.languageServer]
start = [ "typescript-language-server", "--stdio" ]